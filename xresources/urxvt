!! rxvt-unicode ----------------------------------------------
URxvt*background: #111111
URxvt*foreground: #babdb6

! initial size
URxvt*geometry: 80x25
URxvt*internalBorder:     2
URxvt*shading: 30
!
! tint background with this color
urxvt*tintColor:          black

!set to 32-bit for real transparency (compositing required)
urxvt*depth:             32

!save n lines of scrollback buffer
urxvt*saveLines:          32767
!flash screen for attention
urxvt*visualBell:         false
!jump to bottom (prompt) on keypress
urxvt*scrollTtyKeypress:  true
!jump to bottom (prompt) when tty gets new lines
urxvt*scrollWithBuffer:   false
!jump to bottom (prompt) on tty output
urxvt*scrollTtyOutput:    false
!toggle scrollbar
urxvt*scrollBar:          false
!scrollbar styles: rxvt, plain, next or xterm
urxvt*scrollstyle:        plain
!scrollbar alignment
urxvt*scrollBar_right:    true
urxvt*scrollColor:        #777777
urxvt*cursorColor:        #ffcc00
!enable pseudo-transparency (requires depth: 24 (see above))
urxvt*inheritPixmap:      false
urxvt*print-pipe:         cat > $(echo urxvt.dump.$(date +'%Y%M%d%H%m%S'))
!secondary screen scroll (default enabled)
urxvt*secondaryScroll:    true
!de-iconify (map) on receipt of a bell character
urxvt*mapAlert:           true
!inhibit writing record into the system log file utmp
urxvt*utmpInhibit:        true

urxvt*perl-lib:           /usr/lib/urxvt/perl/
urxvt*perl-ext-common:    default,matcher,resize-font
urxvt*urlLauncher:        /usr/bin/chromium
urxvt*matcher.button:     1

#ifdef SRVR_zoidberg
  URxvt.font:             xft:Droid Sans Mono for Powerline:pixelsize=14:antialias=true
  URxvt.boldFont:         xft:Droid Sans Mono for Powerline:bold:pixelsize=14:antialias=true
#else
  URxvt.font:             xft:Droid Sans Mono for Powerline:pixelsize=11:antialias=true
  URxvt.boldFont:         xft:Droid Sans Mono for Powerline:bold:pixelsize=11:antialias=true
#endif

URxvt.iconFile: /usr/share/icons/hicolor/scalable/apps/roxterm.svg

!!! hot-keys for font sizes
!!! see: https://wiki.archlinux.org/index.php/Rxvt-unicode#Changing_font_size_on_the_fly
URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger: C-Up

